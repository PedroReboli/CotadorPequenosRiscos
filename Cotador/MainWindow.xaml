				<Label x:Name="LAB_Container_LMG"  Height="23" Margin="96,446,172,0" VerticalAlignment="Top" FontWeight="Bold" >LMG</Label>
				<TextBox x:Name="Lmg_Container" HorizontalAlignment="Left" Height="25" Margin="140,446,0,0" Text="" VerticalAlignment="Top" Width="120" Background="White" CaretBrush="Black" TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Fixed" TextWrapping="Wrap"/>
				<Label x:Name="LAB_N_RCF_DC" Content="N° RCF-DC" HorizontalAlignment="Left" Margin="57,336,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

		<TextBox x:Name="RCTRC" HorizontalAlignment="Left" Height="24" Margin="127,294,0,0" VerticalAlignment="Top" Width="120" Background="White" CaretBrush="Black" TextOptions.TextFormattingMode="Display"   />

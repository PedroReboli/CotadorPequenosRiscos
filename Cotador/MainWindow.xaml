				<TextBox x:Name="POS_1" HorizontalAlignment="Left" Height="25" Margin="146,395,0,0" Text="" VerticalAlignment="Top" Width="23" Background="White" CaretBrush="Black" TextOptions.TextFormattingMode="Display" />

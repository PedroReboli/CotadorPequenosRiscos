		<TextBox x:Name="Saida" HorizontalAlignment="Left" Height="26" Margin="214,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Background="White" CaretBrush="Black"/>
		<Label Content="Tabela RCTR-C" HorizontalAlignment="Left" Margin="28,342,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

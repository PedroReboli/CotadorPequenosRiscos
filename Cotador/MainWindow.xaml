		<Button x:Name="Gerar" IsEnabled="True" Content="Gerar" HorizontalAlignment="Left" Margin="127,450,0,0" VerticalAlignment="Top" Width="141" Height="80" Background="#FF44BB38" Click="Gerar_Click" BorderBrush="{x:Null}" FontSize="20"/>


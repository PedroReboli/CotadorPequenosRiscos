				<Label Content="CNPJ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="67,144,0,0" FontFamily="Dubai" FontSize="13"/>
				<TextBox x:Name="CNPJ" HorizontalAlignment="Left" Height="22" Margin="154,144,0,0" VerticalAlignment="Top" Width="120" TextOptions.TextHintingMode="Animated" FontFamily="Dubai"/>
				<Label Content="Corretor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="67,172,0,0" FontFamily="Dubai" FontSize="13"/>


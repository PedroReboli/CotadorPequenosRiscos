		AllowsTransparency="True"
		AllowDrop="False" Title="Nacional"  Height="813.341" Width="865.843" WindowStyle="None" Background="{x:Null}" >

	<Grid>
		<Border CornerRadius="20,20,0,0">
			<Border.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<LinearGradientBrush.RelativeTransform>
						<TransformGroup>
							<ScaleTransform CenterY="0.5" CenterX="0.5"/>
							<SkewTransform CenterY="0.5" CenterX="0.5"/>
							<RotateTransform Angle="-322.39" CenterY="0.5" CenterX="0.5"/>
							<TranslateTransform/>
						</TransformGroup>
					</LinearGradientBrush.RelativeTransform>
					<GradientStop Color="#FFCFF99C" Offset="1"/>
					<GradientStop Color="#FF01645B"/>
					<GradientStop Color="#FF1AB97F" Offset="0.353"/>
				</LinearGradientBrush>
			</Border.Background>
			<Grid>
				<Border Height="29" VerticalAlignment="Top" Panel.ZIndex="-1" CornerRadius="20,20,0,0" Background="#44FFFFFF"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
					<materialDesign:PackIcon Kind="WindowMinimize" Width="30" Height="30" Margin="0,3,10,0" Background="#00000000" Foreground="Black"/>


				<Label x:Name="LAB_SubLimite" Content="SubLimite" HorizontalAlignment="Left" Margin="645,138,0,0" VerticalAlignment="Top" FontFamily="Dubai" FontSize="13"/>
				<TextBox x:Name="Corretor" HorizontalAlignment="Left" Height="24" Margin="154,172,0,0" VerticalAlignment="Top" Width="120" TextOptions.TextHintingMode="Animated" FontFamily="Dubai"/>
				<TextBox x:Name="LMG" HorizontalAlignment="Left" Height="22" Margin="154,206,0,0" VerticalAlignment="Top" Width="120" TextOptions.TextHintingMode="Animated" FontFamily="Dubai"/>
				<TextBox x:Name="Taxa" HorizontalAlignment="Left" Height="24" Margin="154,230,0,0" VerticalAlignment="Top" Width="120" TextOptions.TextHintingMode="Animated" FontFamily="Dubai"/>
				<TextBox x:Name="Importancia_Segurada" HorizontalAlignment="Left" Height="24" Margin="154,260,0,0" VerticalAlignment="Top" Width="120" TextOptions.TextHintingMode="Animated" FontFamily="Dubai"/>

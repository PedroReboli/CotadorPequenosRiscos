				<Label Content="Taxa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="67,230,0,0" FontFamily="Dubai" FontSize="13"/>
				<CheckBox Checked="Ajustavel_Checked" Unchecked="Ajustavel_Checked" x:Name="Ajustavel" Content="Ajustavel" HorizontalAlignment="Left" Margin="352,110,0,0" VerticalAlignment="Top" FontFamily="Dubai" FontSize="13"/>

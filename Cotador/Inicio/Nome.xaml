<Window x:Class="Cotador.Inicio.Nome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cotador.Inicio"
        mc:Ignorable="d"
        Title="Nome" Height="141.563" Width="330.313" WindowStartupLocation="CenterScreen" >
	<Border>
		<Border.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<LinearGradientBrush.RelativeTransform>
				<TransformGroup>
					<ScaleTransform CenterY="0.5" CenterX="0.5"/>
					<SkewTransform CenterY="0.5" CenterX="0.5"/>
					<RotateTransform Angle="-322.39" CenterY="0.5" CenterX="0.5"/>
					<TranslateTransform/>
				</TransformGroup>
			</LinearGradientBrush.RelativeTransform>
			<GradientStop Color="#FFCFF99C" Offset="1"/>
			<GradientStop Color="#FF01645B"/>
			<GradientStop Color="#FF1AB97F" Offset="0.353"/>
			</LinearGradientBrush>
		</Border.Background>
		<StackPanel Orientation="Vertical">
			<Label HorizontalAlignment="Center" FontFamily="Open Sans" Foreground="#C9FFFFFF" FontWeight="Light" FontSize="20">Nome do subscritor</Label>
			<TextBox x:Name="nome" Width="200"/>
			<Button Click="AplicarNome"  Content="Ok" Margin="0,10" HorizontalAlignment="Center" Width="100" />
		</StackPanel>
	</Border>
</Window>
